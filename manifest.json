{
  "manifest_version": 2,
  "name": "enkel",
  "description": "提供JSON格式化、Base64加密解密、传图识色、文字加密等开发工具",
  "version": "2.0.1",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "contextMenus",
    "notifications",
    "file:///*",
    "https://secure.flickr.com/",
    "https://talkapi.dei2.com/",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html#/popup"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery-1.11.1.min.js",
        "js/jquery.json.js",
        "js/json2.js",
        "js/jsonlint.js",
        "content-script.js",
        "bg-cookies.js"
      ],
      "css": [],
      "run_at": "document_start"
    }
  ],
  "omnibox": {
    "keyword": "enkel"
  },
  "background": {
    "scripts": [
      "bg.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "index.html#/blank"
  },
  "content_security_policy": "script-src 'self' https://g.alicdn.com/ 'unsafe-inline'; object-src 'self'"
}